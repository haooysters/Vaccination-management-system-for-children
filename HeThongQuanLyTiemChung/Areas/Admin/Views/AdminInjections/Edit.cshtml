@model HeThongQuanLyTiemChung.Models.Injection

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminInjections" asp-action="Index" class="breadcrumb-item">Danh sách mũi tiêm</a>
            <span class="breadcrumb-item active">Chỉnh sửa mũi tiêm</span>
        </nav>
    </div>
</div>


<form asp-action="Edit" asp-route-id="@Model.InjectionId" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="InjectionId" />
    <input type="hidden" asp-for="DiseaseId" />
    <div class="form-group col-md-6">
        <label class="col-sm-6 col-form-label">Tên mũi tiêm</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="InjectionName" placeholder="Tên mũi tiêm">
        </div>
    </div>
    <div class="form-group col-md-6">
        <label class="col-sm-6 col-form-label">Tháng tuổi</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" asp-for="MonthAgeName" placeholder="Tháng tuổi">
        </div>
    </div>
    <div class="form-group col-md-6">
        <div class="col-sm-6">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>

</form>

