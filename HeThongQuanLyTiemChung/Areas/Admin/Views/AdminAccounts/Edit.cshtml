@model HeThongQuanLyTiemChung.Models.Account

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminAccounts" asp-action="Index" class="breadcrumb-item">Danh sách tài khoản</a>
            <span class="breadcrumb-item active">Chỉnh sửa tài khoản</span>
        </nav>
    </div>
</div>


<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @*Người dùng không chỉnh sửa tự động lấy lại giá trị cũ*@
    <input type="hidden" asp-for="AccountId" />
    <input type="hidden" asp-for="Password" />
    <input type="hidden" asp-for="Salt" />
    <input type="hidden" asp-for="CreateDate" />
    @*<input type="hidden" asp-for="Address" />*@
<div class="form-group">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="FullName" class="control-label">Họ tên</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Phone" class="control-label">Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="RoleId" class="control-label">Vai trò</label>
            <select asp-for="RoleId" class="form-control" asp-items="ViewBag.Quyen"></select>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-md-8">
        <label asp-for="Address" class="control-label">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group col-md-4">

        <input type="checkbox" @Html.CheckBox("Active")
        <label>Trạng thái</label>

    </div>
    
    <div class="form-group col-md-4" style="text-align:center">
        <div class="template-demo mt-2">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>
</div>
</form>


