@model HeThongQuanLyTiemChung.Models.Gender

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminGenders" asp-action="Index" class="breadcrumb-item">Danh sách giới tính</a>
            <span class="breadcrumb-item active">Tạo mới giới tính</span>
        </nav>
    </div>
</div>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-6 col-form-label">Giới tính</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="GenderName" placeholder="Tên giới tính">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-6" style="text-align:center">
                <button type="submit" class="btn btn-primary">Tạo mới</button>
            </div>
        </div>
    </div>
</form>

