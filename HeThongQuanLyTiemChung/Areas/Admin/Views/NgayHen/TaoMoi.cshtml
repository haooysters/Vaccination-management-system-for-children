@model HeThongQuanLyTiemChung.Models.AppointDate

<div class="modal-header">
    <h5 class="modal-title">THÊM NGÀY HẸN</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="modal-body">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <form asp-action="TaoMoi" asp-area="Admin" asp-controller="NgayHen" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AppointDateId" />
                    <input type="hidden" asp-for="InjectionId" />
                    <input type="hidden" asp-for="CustomerId" />
                    <div class="row">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label class="col-sm-8 col-form-label">Chọn ngày tiêm</label>

                                    <input class="form-control" asp-for="AppointmentDate" placeholder="Tên mũi tiêm" required>
                                    <span asp-validation-for="AppointmentDate" class="col-sm-6 text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-8" style="text-align:center">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Cập nhật</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>

