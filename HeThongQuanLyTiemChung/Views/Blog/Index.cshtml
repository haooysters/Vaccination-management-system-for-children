@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<HeThongQuanLyTiemChung.Models.Page>

@{
    int CurrentPage = ViewBag.CurrentPage;
    int PageNext = CurrentPage + 1;
    ViewData["Title"] = "Index" + CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="main-content">
    
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row">
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        string url = $"/tin-tuc/{item.Title}-{item.PageId}.html";
                        <div class="col-md-6">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a href="@url">
                                        <img href="@url" width="400" height="400" class="img-full" src="~/images/pages/@item.Thumb" alt="@item.Title">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li class="date"><i class="fa fa-calendar-o me-2"></i>@item.CreateDate.Value.ToShortDateString()</li>
                                            <li>
                                                <span class="comments me-3">
                                                    <a href="javascript:void(0)">@item.AuthorName</a>
                                                </span>
                                                <span class="link-share">
                                                    <a href="javascript:void(0)">Share</a>
                                                </span>
                                            </li>
                                        </ul>
                                    </div>
                                    <h5 style="height:100px" class="title mb-4">
                                        <a  href="@url">@item.Title</a>
                                    </h5>
                                    <p class="short-desc mb-5"></p>
                                    <div class="button-wrap">
                                        <a class="btn btn-custom-size lg-size btn-dark rounded-0" href="@url">Xem Thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                }

                <div class="col-lg-12">
                    <div class="pagination-area pt-10">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center">
                                @if (CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/blogs.html?page=@(CurrentPage - 1)" aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="/blogs.html" aria-label="Previous">
                                            <span class="fa fa-chevron-left"></span>
                                        </a>
                                    </li>
                                }

                                <li class="page-item active"><a class="page-link" href="/blogs.html?page=@CurrentPage">@CurrentPage</a></li>
                                <li class="page-item"><a class="page-link" href="/blogs.html?page=@PageNext">@PageNext</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="/blogs.html?page=@PageNext" aria-label="Next">
                                        <span class="fa fa-chevron-right"></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
