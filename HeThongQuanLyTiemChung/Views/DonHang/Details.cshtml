@model HeThongQuanLyTiemChung.ModelViews.XemDonHang

@{
    var total = Model.ChiTietDonHang.Sum(x => x.Total).Value.ToString("#,##0");
}
<h3>Thông tin tiêm chủng: #@Model.DonHang.OrderId</h3>
<br />
<p>Ngày tiêm: @Model.DonHang.CreateDate</p>
<p>Thanh toán: <strong> @total VNĐ</strong></p>


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>#</th>
                <th>Vắc xin</th>
                <th>Tên bệnh</th>
                <th>Mũi tiêm</th>
                <th>Liều lượng</th>
                <th>Số lô</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>

            @foreach (var item in Model.ChiTietDonHang)
            {
                <tr>
                    <td>@item.InjectionId</td>
                    <td>@item.Vaccine.VaccineName</td>
                    <td>@item.Injection.Disease.DiseaseName</td>
                    <td>@item.Injection.InjectionName</td>
                    <td>@item.Dosage</td>
                    <td>@item.LotNumber</td>

                    <td>@item.Quantity</td>
                    <td>@item.Total.Value.ToString("#,##0") VNĐ</td>
                </tr>
            }
        </tbody>
    </table>
</div>